<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_simple_equipment_barcode">
        <div style="width: 32%; display: inline-table; height: 10rem;">
            <table class="table table-bordered mb-0" style="border: 2px solid black;">
                <tr>
                    <th class="table-active text-left" style="height: 4rem;">
                        <strong t-field="equipment.display_name"/>
                    </th>
                </tr>
                <tr>
                    <td class="text-center align-middle" style="height: 6rem;">
                        <t t-if="equipment.barcode">
                            <img alt="Barcode" t-if="len(equipment.barcode) == 13"
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(equipment.barcode or ''), 600, 150)"
                                 style="width:100%;height:4rem;"/>
                            <img alt="Barcode" t-elif="len(equipment.barcode) == 8"
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(equipment.barcode or ''), 600, 150)"
                                 style="width:100%;height:4rem;"/>
                            <img alt="Barcode" t-else=""
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(equipment.barcode or ''), 600, 150)"
                                 style="width:100%;height:4rem"/>
                            <span t-field="equipment.barcode"/>
                        </t>
                        <t t-else="">
                            <span class="text-muted">No barcode available</span>
                        </t>
                    </td>
                </tr>
            </table>
        </div>
    </template>
    <template id="report_equipmentbarcode">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="equipment">
                    <t t-call="itl_maintenance_extended.report_simple_equipment_barcode">
                        <t t-set="equipment" t-value="equipment"/>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>
